<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <behaviors>
      <endpointBehaviors>
        <behavior name="protoEndpointBehavior">
          <protobuf/>
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior name="SecurityServiceBehavior">
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <bindings>

      <netTcpBinding>
        <!--Service Bindings-->
        <binding name="DefaultTcpBinding"
             closeTimeout="00:01:00"
             openTimeout="00:02:00"
             receiveTimeout="00:50:00"
             sendTimeout="00:50:00"
             transactionFlow="true"
             transferMode="Buffered"
             transactionProtocol="OleTransactions"
             hostNameComparisonMode="StrongWildcard"
             listenBacklog="100"
             maxBufferPoolSize="524288"
             maxBufferSize="6553600"
             maxConnections="100"
             maxReceivedMessageSize="6553600">
          <reliableSession ordered="true"
                   inactivityTimeout="00:30:00"
                   enabled="false" />
        </binding>
      </netTcpBinding>
    </bindings>
    <services>
      <service name="WCFServiceHost.SecurityService" behaviorConfiguration="SecurityServiceBehavior">
         <!--Service Endpoints--> 
        <endpoint address="net.tcp://localhost:50001/SecurityService" binding="netTcpBinding" bindingConfiguration="DefaultTcpBinding" contract="WcfServiceContract.ISimpleContract"
                  behaviorConfiguration="protoEndpointBehavior">
          <identity>
            <dns value="localhost"/>
          </identity>
        </endpoint>
      </service>
      <service name="WCFServiceHost.OrderService" behaviorConfiguration="SecurityServiceBehavior">
         <!--Service Endpoints--> 
        <endpoint address="net.tcp://localhost:50002/OrderService" binding="netTcpBinding" bindingConfiguration="DefaultTcpBinding" contract="WcfServiceContract.IOrderService"
                  behaviorConfiguration="protoEndpointBehavior">
          <identity>
            <dns value="localhost"/>
          </identity>
        </endpoint>
      </service>
    </services>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
    <extensions>
      <behaviorExtensions>
        <add name="protobuf" type="ProtoBuf.ServiceModel.ProtoBehaviorExtension, protobuf-net, Version=2.0.0.668, Culture=neutral, PublicKeyToken=257b51d87d2e4d67"/>
      </behaviorExtensions>
    </extensions>

  </system.serviceModel>

</configuration>